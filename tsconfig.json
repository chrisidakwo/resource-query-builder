{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}
